    <a class="col-m-1 col-lg-2" href="/newsfeed"><img src="/img/logo.PNG" class="img-fluid m-0"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
    <span class="navbar-toggler-icon"></span>
    </button>

    <!-- search bar -->
    <form action = '/api/searchUser' class="searchBar" id = "searchBar">
    <div class="bg-light border rounded rounded-pill shadow-sm">
      <div class="input-group">
      <div class="input-group-prepend">
        <button id="button-addon2" type="submit" class="btn btn-link text-warning searchButton"><i
          class="material-icons">search</i></button>
      </div>
      <input type="search" placeholder="search for creators around the world" aria-describedby="button-addon2"
        class="form-control border-0 bg-light" id = 'search' name = 'search'>
