<div class="modal-container">
  <div class="modal-body">
    <div class="container-fluid">
      <div class="row mx-auto">
        <div class="col-9" id="post-image-pane">
          <img src={{post.img}} alt="" id="post-image">
        </div>
        <div class="col-3" id="post-info-pane">
          <header>
            <div class="row mx-auto">
              <div class="col-2">
                IMAGE
              </div>
              <div class="col-10">
                <a href=""><h5>{{post.author.firstName}}</h5></a>
              </div>
            </div>
            <div class="row mx-auto">
              <div class="col-10 ml-auto">
                <h5>@{{post.author.username}}</h5>
              </div>
            </div>
          </header>
          <p>{{post.caption}}</p>
          <p>Likes: {{post.likes}}</p>
          {{#each post.comments}}
            <ul>
              <h5>{{this.commenter.username}}</h5>
              <p>{{this.comment}}</p>
            </ul>
          {{/each}}
          {{#each post.comments}}
